[alias]
	st = status --short
	sta = status --short -uall
	ci = commit --verbose
	co = checkout
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	ff = merge --ff-only
	noff = merge --no-ff
	pullff = pull --ff-only
	fa = fetch --all
	ds = diff --stat=160,120

	l = "!. ~/script/githelpers && pretty_git_log"
	la = !git l --all
	r = !GIT_NO_PAGER=1 git l -10
	ra = !git r --all
	b = "!. ~/script/githelpers && pretty_git_branch"
	ba = !git b -a
	bs = "!. ~/script/githelpers && pretty_git_branch_sorted"
	br = !git r --first-parent
	bl = !git l --first-parent

	wb = with-branch

	gn = goodness
	gnc = goodness --cached

	div = divergence

	git = !exec git

[user]
	name = Tynor Fujimoto
	email = tynorf@gmail.com

[merge]
	tool = opendiff

[diff]
	submodule = log
	tool = vimdiff
	algorithm = patience

[includeIf "gitdir:~/cdm/lockr/"]
	path = ./lockr.config
